<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<!-- 每个suite中可分多个test，便于模块控制 -->
<suite name="Suite" thread-count="1">
    <!-- driver的属性配置文件保存路径 -->
    <parameter name="driverFilePath" value="config/driver.properties" />
    <!-- 测试参数 数据文件   修改测试站点、登录名、密码时，需要修改 文件路径(推荐)，或者直接修改.properties文件 -->
    <parameter name="paramFilePath" value="config/paramsProvider/csjxs.miyunplus.properties"/>
    <!-- chrome,firefox,ghost和ie不区分大小写 -->
    <parameter name="browserName" value="chrome" />

    <!-- 定义测试模块，用test标签包围 -->
    <!-- test标签中可以内置groups标签，用于分组控制 -->
    <!-- test标签中可以内置packages标签，用于定义用例所在的package -->
    <!-- test标签中可以内置classes标签，用于定义用例类 -->
    <test name="Login" preserve-order="true" group-by-instances="true">
        <groups>
            <run>
                <include name="生成报损单"></include>
                <include name="生成报溢单"></include>
                <!--  <include name="生成采购订单"></include>
                <include name="生成采购入库单"></include>
                <exclude name="临时"></exclude>
                <exclude name=""></exclude>-->
            </run>
        </groups>
        <packages>
            <package name="com.hebg3.testcases.login" />
        </packages>
        <classes>
            <class name="com.hebg3.testcases.login.LoginPage_001_LoginSuccessFunction_Test"/>
        </classes>
    </test>

    <listeners>
        <!-- arrow插件实现用例失败重跑以及生成测试报告 -->
        <listener class-name="com.hebg3.plugins.arrow.TestResultListener" />
        <listener class-name="com.hebg3.plugins.arrow.RetryListener" />
        <listener class-name="com.hebg3.plugins.arrow.PowerEmailableReporter" />
    </listeners>
</suite> <!-- Suite -->